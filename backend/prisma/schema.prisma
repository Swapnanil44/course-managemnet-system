generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  password String
  role     Role     @default(USER)
  courses  Course[]
}

model Course {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  createdAt    DateTime @default(now())
  instructorId Int
  instructor   User     @relation(fields: [instructorId], references: [id])
  lessons      Lesson[]
}

model Lesson {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  courseId Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  INSTRUCTOR
}
